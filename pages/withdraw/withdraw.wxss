/* pages/recharge/recharge.wxss */

@import "/src/weui.wxss";
page{
  height: 100%;
  background-color: #f9f9f9;
}

.form-group{
  background-color: #fff;
}

.title {
  font-size: 30rpx;
  padding: 20rpx;
  display: block;
}

.input-div text {
  font-size: 40rpx;
}

.input-div {
  font-size: 45rpx;
  border-bottom: 2rpx solid #f1f1f1;
  padding: 30rpx;
  display: flex;
  align-items: center;
}

.form-input {
  border: 0;
  display: inline-block;
  outline: none;
  width: 100%;
  height: 60rpx;
}

.highlight{
  color: #229BC9;
}

.savebtn {
  position: fixed;
  bottom: 0;
  left: 0;
  border-radius: 0;
  width: 100%;
}
.row-div {
  /* border-bottom: 1rpx solid #f1f1f1; */
  margin: 20rpx 0;
}

.row {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  padding: 5rpx 20rpx;
  line-height: 90rpx;
  font-size: 30rpx;
  background-color: #fff;
}

.row+.row {
  border-top: 1rpx solid #f1f1f1;
}

view{
  font-size: 28rpx;

}
.weui-cell{
  line-height: 100rpx;
}
.weui-label{
  width: 150rpx;
}

picker.row view{
  width: 350rpx;
  display: inline-block;
}
.picker-right{
  text-align: right;
}


.icon-xinyongqiahuankuan{
  color: #FFB400;
}