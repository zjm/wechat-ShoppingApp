/* pages/ticketCenter/ticketCenter.wxss */

page {
  background-color: #f9f9f9;
}

.ticket-list {
  padding: 20rpx;
}

.ticket-list .ticket-li {
  border-radius: 20rpx;
  border: 1rpx solid #c3c3c3;
  background-color: #fff;
  margin-top: 20rpx;
  text-align: center;
}

.ticket-list .ticket-a {
  height: 200rpx;
  display: flex;
  align-items: center;
}

.ticket-left {
  border-radius: 20rpx;
  flex: 1;
  display: flex;
  background-color: #fff;
  position: relative;
  padding-right: 15rpx;
  padding-left: 15rpx;
}

.ticket-list .ticket-right {
  width: 150rpx;
  margin-left: 10rpx;
  position: relative;
  border-radius: 0px 20rpx 20rpx 0px;
  border-left: 1rpx dashed #ddd;
}

.ticket-list .pro-content {
  flex: 1;
  text-align: left;
  margin-left: 10rpx;
}

.ticket-list .pro-info {
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  color: #232326;
  margin-bottom: 20rpx;
}

.big-price {
  font-size: 40rpx;
  color: #f74949;
}

.price-info {
  color: #f74949;
}

/*进度条  */
.ticket-list .progress-bar-block {
  width: 120rpx;
  margin-left: 15rpx;
  padding-top: 25rpx;
}

.ticket-list .t-progress-bar {
  width: 120rpx;
  height: 20rpx;
  border-radius: 20rpx;
  background-color: #f74949;
}

.ticket-list .ticket-right .t-progress-bar {
  background-color: #fc9b9b;
}

.ticket-list .t-progress-bar text {
  display: block;
  height: 100%;
  width: 50%;
  background-color: #d91111;
  border-radius: 20rpx;
}

.ticket-list .progress-text {
  display: block;
  font-size: 22rpx;
  color: #f74949;
  width: 100%;
  text-align: center;
  margin-top: 10rpx;
}

/*按钮  */
.ticket-list .ticket-btn-go-look, .ticket-list .ticket-btn {
  color: #f74949;
  border: 2rpx solid #d91111;
  border-radius: 20rpx;
  background-color: #fff;
  padding: 5rpx;
  text-align: center;
  margin: 10rpx;
  display: block;
}

/*倒计时  */
.ticket-list .progress-time-block {
  color: #fff;
  padding: 15rpx 0;
}

.ticket-list .progress-time-text {
  display: block;
  font-size: 20rpx;
  color: #f74949;
  width: 100%;
  text-align: center;
  margin-top :10rpx ;
}

.ticket-list .progress-time-sp {
  background-color: #d91111;
  padding: 5rpx;
  color: #fff;
}

.ticket-list .no-ticket .t-progress-bar,
.ticket-list .no-ticket .t-progress-bar span {
  background-color: #ececec;
}

.ticket-list .no-ticket .progress-text {
  color: #aaa;
}

.ticket-list .no-ticket .ticket-btn-go-look, .ticket-list .no-ticket .ticket-btn {
  color: #fff;
  background-color: #aaa;
  border-color: #aaa;
}

.ticket-right .had {
  width: 130rpx;
  height: 100rpx;
  background: url(http://rf.onbus.cn/shopping/mobile/img/lingqu.png);
  background-size: 130rpx 100rpx;
  display: block;
  margin: 0rpx 0 20rpx 10rpx;
}

