/* pages/listDetail/listDetail.wxss */
@import "../template/no-more/no-more-template";
@import "../template/goods-item-row/goods-item-row-template";

page {
  background-color: #f9f9f9;
}
.list-details-content{
  margin-bottom: 120rpx;
}
/*订单状态  */

.order-state {
  padding: 20rpx;
  background-color: #fff;
}

.order-progress {
  position: relative;
  overflow: hidden;
  margin: 20rpx 0;
  display: flex;
}

.order-progress:after, .order-progress:before {
  position: absolute;
  top: 59rpx;
  content: "\20";
  display: block;
  margin: 0 auto;
  height: 6rpx;
  width: 33%;
  background: #999;
  border-top: 4rpx solid #dbdbdb;
  border-bottom: 4rpx solid #dbdbdb;
}

.order-progress:before {
  left: 17%;
}

.order-progress.order-progress-b:before, .order-progress.order-progress-a:after {
  background: #229bc9;
}

.order-progress:after {
  right: 17%;
}

.order-progress view {
  position: relative;
  width: 33.33%;
  text-align: center;
  color: #999;
  display: block;
  flex: 1;
}

.order-progress i {
  position: relative;
  z-index: 1;
  display: block;
  width: 40rpx;
  height: 40rpx;
  margin: 10rpx auto;
  background: #999;
  border-radius: 40rpx;
  border: 4rpx solid #e5e5e5;
}

.order-progress .i-complete {
  background: #229bc9 url(data:image/png;base64,) no-repeat 50%;
  background-size: 40rpx 40rpx;
}

.list-inner {
  border-top: 1rpx solid #ddd;
  padding-top: 20rpx;
}

.list-inner-row {
  display: flex;
  margin: 15rpx 0;
  font-size: 30rpx;
}

.list-inner-title {
  color: #999;
  font-size:26rpx;
}

.list-inner-content{
  margin-left: 18rpx;
}

.list-inner-content text {
  color: #3985ff;
  font-size:26rpx;
}

/*订单详细  */

.order-detail {
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff;
  position: relative;
}

.order-detail > view {
  position: relative;
  padding-left: 150rpx;
  margin: 5rpx 0;
  font-size: 26rpx;
}

.order-detail > view text {
  position: absolute;
  left: 0;
  top: 0;
  display: block;
  width: 150rpx;
  color: #999;
  font-size: 26rpx;
}

.order-detail > view b {
  font-weight: 400;
  color: #e4393c;
}

navigator{
  display: inline-block;
}
.item-btn{
  padding: 5rpx 15rpx;
  border-radius: 50rpx;
  border: 1rpx solid #f23232;
  color: #f23232;
}
.store-title {
  border-bottom: 1rpx solid #f1f1f1;
  height: 80rpx;
  background-color: #fff;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store-title-a text {
  margin: 0 20rpx;
   font-size: 28rpx; 
}
/* 金额信息 */

.order-total {
  margin: 20rpx 0;
  padding: 0 20rpx;
  background-color: #fff;
}

.order-total > view {
  position: relative;
  padding: 20rpx 0;
}

.order-total view view {
  line-height: 60rpx;
  font-size: 26rpx;
}

.order-total view text {
  color: #e4393c;
  float: right;
}

.order-total .total {
  border-top: 1rpx solid #ddd;
  text-align: right;
  padding: 15rpx 0;
}

.order-total .total strong {
  font-size: 30rpx;
  color: #e4393c;
}

/*底部按钮  */

.list-details-footer {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  background-color: #fff;
  z-index: 10;
  box-shadow: 0px -10rpx 30rpx #ccc;
}

.order-info-btn text {
  padding: 15rpx;
  border: 1rpx solid #666;
  border-radius: 50rpx;
  margin-left: 20rpx;
  color: #333;
}

.order-info-btn {
  line-height: 100rpx;
  padding: 0 20rpx;
  text-align: right;
}

.order-info-btn .buy-again {
  border-color: #f15353;
  color: #f15353;
}
