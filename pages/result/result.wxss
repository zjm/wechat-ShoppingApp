.header {
  padding: 10rpx 15rpx 0;
  /* position: fixed;
  top: 0;
  left: 0;
  width: 100% */
}

.weui-icon-clear {
  display: none;
}

.weui-search-bar__cancel-btn .iconfont {
  font-size: 50rpx;
}

/* .weui-search-bar{
  width: 100%
} */

.goods-item {
  border-bottom: 1rpx solid #f5f5f5;
}

.item-img {
  width: 200rpx;
  height: 200rpx;
}

.item {
  height: 200rpx;
  line-height: 60rpx;
}

.item-title, .item-text, .item-total {
  width: 400rpx;
}

/*排序菜单  */

.sort-list {
  justify-content: space-around;
  display: flex;
  width: 100%;
  height: 70rpx;
  font-size: 28rpx;
  align-content: center;
  border-bottom: 1rpx solid #f5f5f5;
  background-color: #fff;
  
}

/*  */
.fixed{
  position: fixed;
  left: 0;
  top: 0;
}

.sort {
  text-align: center;
  margin: 20rpx 0;
  height: 30rpx;
  line-height: 30rpx;
  flex: 1;
}

.sort+.sort {
  border-left: 1rpx solid #ececec;
}

.sort-active {
  color: #f23232;
}

.heard-location-text {
  position: absolute;
  overflow: hidden;
}

.overall-sort-list, .filterList, .filterList-footer {
  background: white;
}

.overall-sort-list {
  flex-direction: column;
  border-top: 1px solid rgba(0, 0, 0, 0);
  display: flex;
}

.overall-sort {
  font-size: 25rpx;
  height: 70rpx;
  line-height: 70rpx;
  margin-left: 30rpx;
}

.filterList {
  height: 90%;
  font-size: 27rpx;
  overflow: auto;
}

.filterList-characteristic-title, .filterList-discount-title {
  position: relative;
  height: 50rpx;
  line-height: 50rpx;
  background: #fbfbfb;
  font-weight: 400;
  padding-left: 30rpx;
}

.filterList-characteristic-title::before, .filterList-discount-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 15rpx;
  display: inline-block;
  width: 5rpx;
  height: 20rpx;
  background: #fed161;
}

.filterList-characteristic-items {
  /* height: 200rpx; */
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
  align-content: space-around;
}

.filterList-characteristic-item {
  text-align: center;
  height: 70rpx;
  width: 200rpx;
  margin: 30rpx 20rpx;
  border-radius: 70rpx;
  border: 2rpx solid #ececec;
  line-height: 70rpx;
}

.filterList-discount-item-icon {
  padding: 0 4rpx;
  color: white;
}

.filterList-discount-item {
  margin-left: 30rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1rpx solid #ececec;
}

.filterList-footer {
  /* margin-top: 10rpx;
  height: 90rpx; */
  display: flex;
  align-content: center;
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 90rpx;
}

.filterList-footer-delect {
  flex: 1;
  line-height: 90rpx;
  padding-left: 30rpx;
  background: #ca394a;
  color: #fff;
  font-size: 35rpx;
  text-align: center;
}

.filterList-footer-finish {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  font-size: 35rpx;
  background: #ff5300;
  position: relative;
  color: #fff;
}

.filterList-footer-finish-number {
  height: 30rpx;
  width: 30rpx;
  line-height: 31rpx;
  font-size: 25rpx;
  margin-left: 15rpx;
  color: #ffd161;
  border-radius: 50%;
  background: black;
}

.characteristic-selected {
  background: #fffbf1;
  border-color: #ffe9b7;
  color: #ffe6b4;
}

.discount-selected {
  color: #ffe6b4;
}

/*排序隐藏层  */

.hidden-layer2 {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 999;
  background: #fff;
  width: 100%;
}

/*筛选隐藏层  */

.hidden-layer {
  height: 100%;
  overflow: auto;
  width: 600rpx;
  /* position: relative; */
}

.goods-container {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.single-view-container {
  /* float: left; */
  margin: 10rpx 0;
}
