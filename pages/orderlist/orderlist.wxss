.order-info {
  background-color: #fff;
}
.true-payed{
  margin-left: 20rpx;
}

.pay-num,.shop-num {
  font-size: 30rpx;
}

.order-info-btn {
  line-height: 100rpx;
  padding: 0 20rpx;
  text-align: right;
}

.pay-txt {
  text-align: right;
  padding: 0 20rpx;
  line-height: 90rpx;
  border-top: 1rpx solid #f1f1f1;
  border-bottom: 1rpx solid #f1f1f1;
}

.order-info-btn text {
  padding: 15rpx;
  border: 1rpx solid #666;
  border-radius: 50rpx;
  margin-left: 30rpx;
  color: #333;
}

.order-info-btn .buy-again {
  border-color: #f15353;
  color: #f15353;
}
