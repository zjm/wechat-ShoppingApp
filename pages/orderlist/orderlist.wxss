/* pages/orderlist/orderlist.wxss */
@import "../template/no-more/no-more-template";
@import "../template/tab-list/tab-list-template";
@import "../template/goods-item-row/goods-item-row-template";

page {
  height: 100%;
  background-color: #f9f9f9;
}

.order-div {
  margin: 20rpx 0;
  position: relative;
}

.store-title {
  border-bottom: 1rpx solid #f1f1f1;
  height: 80rpx;
  background-color: #fff;
  padding-left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.store-title-a text {
  margin: 0 20rpx;
   font-size: 28rpx; 
}
.edit{
  display: flex;
}
.order-edit {
  width: 100rpx;
  text-align: center;
}

.order-status {
  text-align: center;
}

