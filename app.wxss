.none{
  display: none;
}

.clearfix:before, .clearfix:after {
    content:" ";
    display: table;
}
.clearfix:after {
    clear: both;
}

.no-wrap{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/*隐藏层  */
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  z-index: 100;
}

.hidden-layer {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  background: #fff;
}